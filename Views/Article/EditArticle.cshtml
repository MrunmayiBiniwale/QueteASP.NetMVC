@model QueteASP.NetMVC.Models.Article

<style>
    .txtId {
        background-color: lightslategray;
    }
</style>

<div>
    <form id="formEditArticle" method="post" action="@Url.Action("UpdateArticle", "Article")">
        <h3>Edit an Article</h3>
        <table>
            <tr><td>@Html.DisplayNameFor(a => a.Id)</td></tr>
            <tr><td>@Html.TextBoxFor(a => a.Id, new { @class = "txtId", @readonly = "readonly" })</td></tr>
            <tr><td>@Html.DisplayNameFor(a => a.Title)</td></tr>
            <tr>
                <td>
                    @Html.TextBoxFor(a => a.Title)
                    @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                </td>
            </tr>
            <tr><td>@Html.DisplayNameFor(a => a.Content)</td></tr>
            <tr>
                <td>
                    @Html.TextBoxFor(a => a.Content)
                    @Html.ValidationMessageFor(model => model.Content, "", new { @class = "text-danger" })
                </td>
            </tr>
            <tr>
                <td>
                    <button class="btn btn-primary">Save</button>
                    <a href="@Url.Action("ListArticles", "Article", Model)" class="btn btn-secondary">Cancel</a>
                </td>
            </tr>
        </table>
    </form>


</div>